{
    "experiment": {
        "name": "adain-coco-wikiart",
        "model_dir": "model_files",
        "tensorboard_dir": "tensorboard"
    },
    "input": {
        "input_shape": [
            256,
            256
        ]
    },
    "floatx": {
        "precision": "mixed_bfloat16"
    },
    "training": {
        "batch_size": 64,
        "strategy": {
            "type": "tpu",
            "name": "local"
        },
        "restore_checkpoint": true,
        "train_steps": 20000,
        "validation_steps": 15,
        "validation_freq": 1000,
        "steps_per_execution": 100,
        "save_every": 4000,
        "style_loss_weight": 1e-2,
        "content_loss_weight": 1.0,
        "encoder_weights": "normalized_vgg19.h5",        
        "optimizer": {
            "name": "adam",
            "learning_rate": {
                "initial_learning_rate": 3e-4,
                "decay_rate": 5e-5
            }
        }
    },
    "dataloader_params": {
        "tfrecords": {
            "train": {
                "style": "/mnt/disks/persist/adain-tensorflow2.x/tfrecords/wikiart-train*",
                "content": "/mnt/disks/persist/adain-tensorflow2.x/tfrecords/coco-train*"
            },
            "val": {
                "style": "/mnt/disks/persist/adain-tensorflow2.x/tfrecords/wikiart-train*",
                "content": "/mnt/disks/persist/adain-tensorflow2.x/tfrecords/coco-val*"
            }
        },
        "augmentations": {
            "min_side": 512,
            "max_side": 1600,
            "horizontal_flip": true
        },
        "preprocessing": {
            "use_bgr": true,
            "offset": [
                103.939,
                116.779,
                123.68
            ],
            "scale": [
                1.0,
                1.0,
                1.0
            ]
        }
    }
}